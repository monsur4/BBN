<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewFirstDoubleHOH"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boma_circle" />

    <ImageView
        android:id="@+id/imageViewSecondDoubleHOH"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewFirstDoubleHOH"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:srcCompat="@drawable/angel_circle" />

    <TextView
        android:id="@+id/textViewAgeFirstDoubleHOH"
        style="@style/contestantHOHItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 years"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="@+id/textViewNameFirstDoubleHOH"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameFirstDoubleHOH" />

    <TextView
        android:id="@+id/textViewNameFirstDoubleHOH"
        style="@style/contestantHOHNameStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Boma"
        app:layout_constraintBottom_toTopOf="@+id/textViewAgeFirstDoubleHOH"
        app:layout_constraintStart_toEndOf="@+id/imageViewFirstDoubleHOH"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewNameSecondDoubleHOH"
        style="@style/contestantHOHNameStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Angel"
        app:layout_constraintBottom_toTopOf="@+id/textViewAgeSecondDoubleHOH"
        app:layout_constraintStart_toEndOf="@+id/imageViewSecondDoubleHOH"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewAgeSecondDoubleHOH"
        style="@style/contestantHOHItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 years"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintStart_toStartOf="@+id/textViewNameSecondDoubleHOH"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameSecondDoubleHOH" />

    <View
        android:id="@+id/divider2"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="68dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewWeekDoubleHOH"
        style="@style/contestantHOHItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Week 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>